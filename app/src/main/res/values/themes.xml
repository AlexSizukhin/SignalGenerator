    </style>

    <style name="Theme.FormSignaler.Fullscreen" parent="Theme.FormSignaler">
        <item name="android:actionBarStyle">@style/Widget.Theme.FormSignaler.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>


    </style>

    <style name="myFloat" parent="Widget.Design.FloatingActionButton" >
 <!--       <item name="backgroundColor">@color/colorPrimaryDark</item> -->

        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="borderWidth">0dp</item>
    </style>
    <style name="mySpinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="borderWidth">0dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="myDialog" parent="android:Theme.Material.Dialog">
        <item name="backgroundColor">@color/colorAccent</item>
        <!-- <item name="android:padding">5dp</item> -->
        <item name="android:layout_margin">4dp</item>
    </style>
    
    <style name="mySeek" parent="Widget.AppCompat.SeekBar">
        <item name="android:colorControlNormal">#00b0ff</item>

        <item name="android:progressDrawable">@color/colorAccent</item>
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:progressBackgroundTint">@color/colorPrimaryDark</item>

        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">#388e3c</item>
        <item name="android:colorControlActivated">#c51162</item>
    </style>



    <style name="ThemeOverlay.FormSignaler.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/colorPrimary</item>
        <item name="fullscreenTextColor">@color/colorPrimaryDark</item>

         <item name="spinnerDropDownItemStyle">@style/mySpinner</item>
         <item name="floatingActionButtonStyle">@style/myFloat</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">5dp</item>






